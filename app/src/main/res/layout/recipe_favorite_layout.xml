<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">


    <TextView
        android:id="@+id/recipeFavoriteID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/recipeFavoriteTitle"
        android:textSize="25sp"
        android:layout_toEndOf="@id/recipeFavoriteID"
        />

    <Button
        android:id="@+id/recipeDeleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recipedelete"
        android:layout_below="@id/recipeFavoriteTitle"
        />



</RelativeLayout>

